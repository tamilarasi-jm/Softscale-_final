{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { 
      "handle": "filesystem" 
    },
    {
      "src": "/api/.*",
      "dest": "/api"
    },
    { 
      "src": "/.*", 
      "dest": "/index.html" 
    }
  ]
}
